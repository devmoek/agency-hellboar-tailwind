{% assign multiplier = 5 %}
{% if card_product.metafields.entries_multiplier.value != blank %}
  {% assign raw_multiplier = card_product.metafields.entries_multiplier.value %}
  {% assign multiplier = raw_multiplier | plus: 0 %}
{% endif %}

{% assign product_price_cents = card_product.price %}
{% assign product_price_dollars = product_price_cents | divided_by: 100 %}
{% assign entries = product_price_dollars | times: multiplier | round %}

