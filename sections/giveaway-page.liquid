        color: var(--light-gray);
      }

      .footer-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 40px;
      }

      .footer-column {
        flex: 1;
        min-width: 250px;
      }

      .footer-title {
