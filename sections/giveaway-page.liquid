  <script>
      // Scroll to sections smoothly
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();

          const targetId = this.getAttribute('href');
          
          // If it's an internal link on the same page
          if (targetId.startsWith('#')) {
            const targetElement = document.querySelector(targetId);

            if (targetElement) {
              window.scrollTo({
                top: targetElement.offsetTop - 80,
                behavior: 'smooth',
              });

              // Close mobile menu if open
              navList.classList.remove('active');
            }
          } else {
            // It's a link to another page
            window.location.href = targetId;
          }
        });
      });

      // FAQ functionality - Direct implementation for giveaway page
      function initializeGiveawayFAQ() {
        console.log('Initializing FAQ for giveaway page...');
        
        const faqQuestions = document.querySelectorAll('.faq-question');
        console.log(`Found ${faqQuestions.length} FAQ questions on giveaway page`);
        
        if (faqQuestions.length === 0) {
          console.log('No FAQ questions found on giveaway page');
          return;
        }
        
        faqQuestions.forEach((question, index) => {
          // Skip if already initialized
          if (question.dataset.giveawayFaqInitialized) {
            return;
          }
          question.dataset.giveawayFaqInitialized = 'true';
          
          console.log(`Setting up FAQ question ${index + 1}:`, question.textContent.trim());
          
          // Add visual styling
          question.style.cursor = 'pointer';
          question.title = 'Click to expand/collapse';
          
          // Add click handler
          question.addEventListener('click', function(e) {
            e.preventDefault();
            console.log('FAQ question clicked:', this.textContent.trim());
            
            const faqItem = this.closest('.faq-item');
            const answer = faqItem.querySelector('.faq-answer');
            const isActive = faqItem.classList.contains('active');
            const indicator = this.querySelector('.faq-indicator');
            
            console.log('FAQ item found:', faqItem);
            console.log('Answer element found:', answer);
            console.log('Currently active:', isActive);
            
            // Find the container
            const container = faqItem.closest('.faq-container') || faqItem.closest('.faq-list');
            
            if (container) {
              // Close all other FAQ items in the same container
              container.querySelectorAll('.faq-item').forEach((item) => {
                if (item !== faqItem) {
                  item.classList.remove('active');
                  const otherIndicator = item.querySelector('.faq-indicator');
                  if (otherIndicator) otherIndicator.textContent = '+';
                }
              });
            }
            
            // Toggle current item
            if (isActive) {
              faqItem.classList.remove('active');
              if (indicator) indicator.textContent = '+';
              console.log('FAQ item closed');
            } else {
              faqItem.classList.add('active');
              if (indicator) indicator.textContent = '−';
              console.log('FAQ item opened');
            }
          });
        });
      }
      
      // Initialize FAQ when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeGiveawayFAQ);
      } else {
        initializeGiveawayFAQ();
      }
      
      // Also try to initialize after a delay as fallback
      setTimeout(initializeGiveawayFAQ, 500);
      setTimeout(initializeGiveawayFAQ, 1000);
      setTimeout(initializeGiveawayFAQ, 2000);
      
      // Make function globally available for debugging
      window.initializeGiveawayFAQ = initializeGiveawayFAQ;

  </script>
