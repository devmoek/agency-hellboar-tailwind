        border-radius: 10px;
        overflow: hidden;
        text-align: center;
        border-bottom: 3px solid var(--primary-red);
      }

      .winner-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
      }

      .winner-content {
        padding: 20px;
      }

      .winner-name {
        font-size: 16px;
        margin-bottom: 5px;
        color: var(--white);
      }

      .winner-prize {
        font-size: 18px;
        color: var(--primary-red);
        font-weight: 500;
        margin-bottom: 15px;
      }

      .winner-text {
        font-size: 14px;
        color: var(--light-gray);
        font-style: italic;
      }

      .prize-specs {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin: 30px 0;
      }

      .spec-item {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 15px;
        border-radius: 8px;
      }

      .spec-label {
        font-weight: 500;
        color: var(--primary-red);
        margin-bottom: 5px;
      }

      .spec-value {
        font-size: 1.1rem;
        color: #fff;
        font-size: 14px;
      }

      .car-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
      }

      .gallery-item {
        position: relative;
        height: fit-content;
      }

      .gallery-item h2 {
        margin: 0;
        padding: 0;
      }

      .gallery-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
      }

      .gallery-item:hover .gallery-img {
        transform: scale(1.1);
      }

      .how-to-win {
        margin-top: 50px;
      }

      .steps-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
      }

      .step-card {
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 30px;
        text-align: center;
        position: relative;
        border-top: 3px solid var(--primary-red);
      }

      .step-number {
        position: absolute;
        top: -20px;
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--primary-red);
        color: var(--white);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        font-weight: 700;
      }

      .step-text {
        color: var(--light-gray);
      }

      .faq-container {
        max-width: 800px;
        margin: 0 auto;
      }

      .faq-item {
        margin-bottom: 20px;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        overflow: hidden;
      }

      .faq-question {
        padding: 20px;
        cursor: pointer;
        position: relative;
        font-size: 1.2rem;
        color: var(--white);
        font-weight: 500;
        font-size: 16px;
      }

      .faq-question::after {
        content: '+';
        position: absolute;
        right: 20px;
        transition: transform 0.3s ease;
      }

      .faq-question.active::after {
        content: '-';
      }

      .faq-answer {
        padding: 0 20px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
        color: var(--light-gray);
      }

      .faq-answer.show {
        padding: 0 20px 20px;
        max-height: 300px;
      }

      .review-sliders {
        display: flex;
      }

      .review-slider {
        position: relative;
      }

      .review-slide {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 30px;
        border-radius: 10px;
        margin: 0 15px;
        text-align: center;
        border-left: 3px solid var(--primary-red);
      }

      .review-quote {
        font-size: 16px;
        margin-bottom: 20px;
        font-style: italic;
        color: var(--light-gray);
      }

      .review-author {
        font-size: 14px;
        font-weight: 500;
        color: var(--primary-red);
      }

      .footer {
        background-color: var(--black);
