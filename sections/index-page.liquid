  <!-- Winner Section -->
  <section class="winner-announcement video-text-section">
    <div class="container">
      <div class="two-column-grid">
        <div class="video-column">
          <div class="video-wrapper">
            <iframe
              width="560"
              height="315"
              src="https://www.youtube.com/embed/BVmP-Qf-rJ8"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
