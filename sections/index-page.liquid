      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const heroVideo = document.getElementById('hero-video');
          if (heroVideo) {
            // Ensure controls are disabled
            heroVideo.controls = false;
            heroVideo.removeAttribute('controls');
            
            // Prevent any control interactions
            heroVideo.addEventListener('loadedmetadata', function() {
              this.controls = false;
            });
            
            // Hide controls on mobile devices
            if (window.innerWidth <= 768) {
              heroVideo.style.pointerEvents = 'none';
              heroVideo.controls = false;
            }
            
            // Re-hide controls if they appear
            const observer = new MutationObserver(function(mutations) {
              mutations.forEach(function(mutation) {
                if (mutation.type === 'attributes' && mutation.attributeName === 'controls') {
                  heroVideo.controls = false;
                }
              });
            });
            
            observer.observe(heroVideo, {
              attributes: true,
              attributeFilter: ['controls']
            });
          }
        });
      </script>

