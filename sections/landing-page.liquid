{% stylesheet %}

  .landing-hero {
    background: linear-gradient(135deg, var(--hero-bg-color) 0%, #1a1a1a 100%);
    color: var(--text-color);
    padding: 80px 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .landing-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('https://cdn.shopify.com/s/files/1/0908/1746/2565/files/website-header_desktop_1.3.png?v=1759752497');
    opacity: 0.3;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin-bottom: 24px;
    line-height: 1.2;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-description {
    font-size: clamp(1.4rem, 2vw, 1.4rem);
    margin-bottom: 32px;
    line-height: 1.6;
    opacity: 0.9;
  }

  .btn {
    display: inline-block;
    padding: 16px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    text-align: center;
  }

  .btn--primary {
    background: var(--accent-color);
    color: white;
    box-shadow: 0 4px 15px rgba(229, 23, 44, 0.3);
  }

  .btn--primary:hover {
    background: #c41426;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(229, 23, 44, 0.4);
  }

  .btn--large {
    padding: 20px 40px;
    font-size: 1.2rem;
  }

  .landing-video {
    padding: 80px 0;
    background: #1a1a1a;
  }

  .video-container {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .video-wrapper {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%;
    /* 16:9 aspect ratio */
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .landing-gallery {
    padding: 80px 0;
    background: #1a1a1a;
  }

  .gallery-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: 16px;
    color: var(--text-color);
  }

  .gallery-description {
    font-size: 1.2rem;
    text-align: center;
    margin-bottom: 48px;
    color: #cccccc;
    line-height: 1.6;
  }

  .car-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease
    , box-shadow 0.3s ease;
    cursor: pointer;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
  }

  .gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .gallery-item:hover .gallery-overlay {
    opacity: 1;
  }

  .gallery-zoom-icon {
    font-size: 2rem;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  /* Image Popup Modal Styles */
  .image-popup {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(5px);
    animation: fadeIn 0.3s ease;
  }

  .image-popup.show {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .popup-content {
    position: relative;
    max-width: 90%;
    max-height: 90%;
    background: #1a1a1a;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    animation: slideIn 0.3s ease;
  }

  .popup-close {
    position: absolute;
    top: 10px;
    right: 15px;
    color: #ffffff;
    font-size: 2rem;
    font-weight: bold;
    cursor: pointer;
    z-index: 10000;
    transition: color 0.3s ease;
  }

  .popup-close:hover {
    color: var(--accent-color);
  }

  .popup-img {
    max-width: 100%;
    max-height: 70vh;
    width: auto;
    height: auto;
    display: block;
    border-radius: 8px;
  }

  .popup-caption {
    color: #ffffff;
    text-align: center;
    margin-top: 15px;
    font-size: 1.1rem;
    font-weight: 500;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: scale(0.8) translateY(-20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .landing-form {
    padding: 80px 0;
    background: #0a0a0a;
  }

  .landing-form .form-wrapper {
    margin: 0 auto;
    text-align: center;
  }

  .form-description {
    font-size: 1.1rem;
    color: #cccccc;
    margin-bottom: 40px;
    line-height: 1.6;
  }

  .giveaway-form {
    text-align: left;
    background: #1a1a1a;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    border: 1px solid #333;
  }

  .form-group {
    margin-bottom: 24px;
  }

  .form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #ffffff;
    font-size: 0.95rem;
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid #444;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
    background: #2a2a2a;
    color: #ffffff;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(229, 23, 44, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .checkbox-group {
    margin-bottom: 32px;
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    cursor: pointer;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .form-checkbox {
    margin: 2px 0 0;
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .checkbox-text {
    color: #cccccc;
  }

  @media (max-width: 768px) {
    .landing-hero {
      padding: 30px 0;
    }

    .landing-video,
    .landing-gallery,
    .landing-form {
      padding: 40px 0;
    }

    .car-gallery {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .gallery-title {
      margin-bottom: 12px;
    }

    .gallery-description {
      margin-bottom: 32px;
      padding: 0 20px;
    }

    .giveaway-form {
      padding: 30px 20px;
    }

    .hero-title {
      margin-bottom: 20px;
    }

    .hero-description {
      margin-bottom: 28px;
    }

    /* Mobile popup adjustments */
    .popup-content {
      max-width: 95%;
      max-height: 95%;
      padding: 15px;
    }

    .popup-img {
      max-height: 60vh;
    }

    .popup-close {
      top: -5px;
      right: 10px;
      font-size: 1.5rem;
    }

    .popup-caption {
      font-size: 1rem;
      margin-top: 10px;
    }
  }
{% endstylesheet %}

<script>
  // Image Popup Functionality
  function openImagePopup(imageSrc, imageAlt) {
    const popup = document.getElementById('imagePopup');
    const popupImage = document.getElementById('popupImage');
    const popupCaption = document.getElementById('popupCaption');
    
    popupImage.src = imageSrc;
    popupImage.alt = imageAlt;
    popupCaption.textContent = imageAlt;
    
    popup.classList.add('show');
    document.body.style.overflow = 'hidden'; // Prevent background scrolling
  }
  
  function closeImagePopup() {
    const popup = document.getElementById('imagePopup');
    popup.classList.remove('show');
    document.body.style.overflow = 'auto'; // Restore scrolling
  }
  
  // Close popup with Escape key
  document.addEventListener('keydown', function(event) {
