<script>
// Direct style manipulation approach
window.addEventListener('load', function() {
  console.log('Page loaded, initializing tabs...');
  
  let tabs = document.querySelectorAll('.size-chart-page .nav-tab');
  let sections = document.querySelectorAll('.size-chart-page .chart-section');
  
  console.log('Tabs found:', tabs.length);
  console.log('Sections found:', sections.length);
  
  // Function to show a specific section
  function showSection(chartName) {
    console.log('Showing section:', chartName);
    
    // Hide all sections by removing active class
    for (let i = 0; i < sections.length; i++) {
      sections[i].classList.remove('active');
      console.log('Removed active from section:', i);
    }
    
    // Show target section by adding active class
    let targetSection = document.querySelector('.size-chart-page [data-chart="' + chartName + '"]');
    if (targetSection) {
      targetSection.classList.add('active');
      console.log('Added active to section:', chartName);
      console.log('Target section classes:', targetSection.className);
    } else {
      console.error('Section not found:', chartName);
    }
  }
  
  // Add click events to tabs
  for (let i = 0; i < tabs.length; i++) {
    tabs[i].addEventListener('click', function(e) {
      e.preventDefault();
      console.log('Tab clicked:', this.textContent.trim());
      
      let chartName = this.getAttribute('data-chart');
      console.log('Chart name:', chartName);
      
      // Remove active from all tabs
      for (let j = 0; j < tabs.length; j++) {
        tabs[j].classList.remove('active');
      }
      
      // Add active to clicked tab
      this.classList.add('active');
      
      // Show the section
      showSection(chartName);
    });
  }
  
  console.log('Tabs initialized successfully');
});
</script>

